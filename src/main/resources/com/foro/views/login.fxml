<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.foro.controllers.LoginController"
      alignment="CENTER" spacing="20" styleClass="login-container">

    <Text text="Foro" styleClass="login-title"/>

    <VBox styleClass="form-container" spacing="10">
        <TextField fx:id="usernameField" promptText="Nombre de usuario" styleClass="form-field"/>
        <PasswordField fx:id="passwordField" promptText="Contraseña" styleClass="form-field"/>

        <Button text="Iniciar sesión" onAction="#handleLogin" styleClass="primary-button"/>

        <HBox alignment="CENTER" spacing="5">
            <Text text="¿No tienes una cuenta?"/>
            <Button text="Regístrate" styleClass="text-button" onAction="#handleRegisterNavigation"/>
        </HBox>
    </VBox>
</VBox>