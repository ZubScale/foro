<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.forum.controller.RegistroController"
            fitToWidth="true" fitToHeight="true">

    <VBox spacing="15" alignment="CENTER">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Text text="Registro de Usuario" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Columna Izquierda -->
            <Label text="Nombre de usuario:" style="-fx-font-size: 14px;"
                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtUsername" prefWidth="200" prefHeight="30"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Correo electrónico:" style="-fx-font-size: 14px;"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtEmail" prefWidth="200" prefHeight="30"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Contraseña:" style="-fx-font-size: 14px;"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <PasswordField fx:id="pfPassword" prefWidth="200" prefHeight="30"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- Columna Derecha -->
            <Label text="Nombre completo:" style="-fx-font-size: 14px;"
                   GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="txtFullName" prefWidth="200" prefHeight="30"
                       GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label text="Fecha de nacimiento:" style="-fx-font-size: 14px;"
                   GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <DatePicker fx:id="dpBirthdate" prefWidth="200" prefHeight="30"
                        GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        </GridPane>

        <Button text="Crear Cuenta"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                onAction="#handleRegistro"/>

        <Button text="Volver al Login"
                style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                onAction="#redirectToLogin"/>
    </VBox>
</ScrollPane>