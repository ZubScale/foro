<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.forum.controller.MainController"
            style="-fx-background-color: white;">

    <top>
        <HBox spacing="20" 
              alignment="CENTER"
              style="-fx-background-color: #4A90E2; -fx-padding: 10;">
            <Label text="ForoApp" 
                  style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Button text="Inicio" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 14px; -fx-padding: 5 10;"/>
            <Button text="Mis Comunidades" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 14px; -fx-padding: 5 10;"/>
            <Button text="Notificaciones" 
                    onAction="#redirectToNotificaciones"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 14px; -fx-padding: 5 10;"/>
            <Button text="Mensajes" 
                    onAction="#redirectToMensajes"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 14px; -fx-padding: 5 10;"/>
            <Button text="Perfil" 
                    onAction="#redirectToPerfil"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 14px; -fx-padding: 5 10;"/>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" 
                 style="-fx-background-color: #f5f5f5;">
            <Tab text="Feed Principal" 
                 style="-fx-background-color: white; -fx-padding: 5;">
                <ScrollPane fitToWidth="true" 
                           style="-fx-background: white; -fx-background-color: transparent;">
                    <VBox spacing="15" 
                          style="-fx-padding: 20; -fx-background-color: white;">
                        <!-- Posts dinámicos se inyectarán aquí -->
                    </VBox>
                </ScrollPane>
            </Tab>
            <Tab text="Tendencias" 
                 style="-fx-background-color: white; -fx-padding: 5;">
                <ListView fx:id="lvTendencias" 
                         style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;"/>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" 
              style="-fx-background-color: #2C3E50; -fx-padding: 10;">
            <Label text="© 2024 ForoApp" 
                  style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>
</BorderPane>